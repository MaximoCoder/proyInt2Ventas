@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="jumbotron jumbotron-fluid bg-primary text-white text-center mb-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="display-3 font-weight-bold mb-3">¡Bienvenido!</h1>
                    <p class="lead mb-4">Sistema de Ventas Profesional</p>
                    <hr class="bg-white">
                    <p class="h5">Desarrollado por la Facultad de Ingeniería Mecánica y Eléctrica</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="container mb-5">
        <div class="row text-center">
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow">
                    <div class="card-body">
                        <i class="fas fa-shopping-cart fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Ventas</h5>
                        <p class="card-text">Sistema para ventas con interfaz intuitiva y fácil de usar.</p>
                    </div>
                </div>
            </div>
       
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow">
                    <div class="card-body">
                        <i class="fas fa-chart-bar fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Reportes</h5>
                        <p class="card-text">Analiza tu negocio con reportes de ventas</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="bg-light py-5 mb-5">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4 col-6 mb-3">
                    <h3 class="display-4 text-primary font-weight-bold">100%</h3>
                    <p class="text-muted">Confiable</p>
                </div>
                <div class="col-md-4 col-6 mb-3">
                    <h3 class="display-4 text-success font-weight-bold">24/7</h3>
                    <p class="text-muted">Disponible</p>
                </div>
                <div class="col-md-4 col-6 mb-3">
                    <h3 class="display-4 text-warning font-weight-bold">∞</h3>
                    <p class="text-muted">Productos</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Development Team Section -->
    <div class="container mb-5">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-4 mb-3">Nuestro Equipo de Desarrollo</h2>
                <p class="lead text-muted">Conoce a los desarrolladores detrás de este sistema</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card shadow h-100">
                    <div class="card-body text-center">
                       
                        <h5 class="card-title text-primary">Alex Martínez</h5>
                        <div class="mt-3">
                            <a href="#" class="btn btn-outline-primary btn-sm me-2">
                                <i class="fab fa-linkedin"></i>
                            </a>
                            <a href="#" class="btn btn-outline-dark btn-sm">
                                <i class="fab fa-github"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card shadow h-100">
                    <div class="card-body text-center">
                        
                        <h5 class="card-title text-success">Juan Sánchez</h5>
                        <div class="mt-3">
                            <a href="#" class="btn btn-outline-primary btn-sm me-2">
                                <i class="fab fa-linkedin"></i>
                            </a>
                            <a href="#" class="btn btn-outline-dark btn-sm">
                                <i class="fab fa-github"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card shadow h-100">
                    <div class="card-body text-center">
                        
                        <h5 class="card-title text-warning">Máximo González</h5>
                        <div class="mt-3">
                            <a href="#" class="btn btn-outline-primary btn-sm me-2">
                                <i class="fab fa-linkedin"></i>
                            </a>
                            <a href="#" class="btn btn-outline-dark btn-sm">
                                <i class="fab fa-github"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="bg-primary text-white py-5 mb-5">
        <div class="container text-center">
            <div class="row">
                <div class="col-12">
                    <h3 class="display-4 mb-3">¿Listo para comenzar?</h3>
                    <p class="lead mb-4">Explora todas las funcionalidades de nuestro sistema</p>
                    <a href="#" class="btn btn-light btn-lg me-3">
                         Comenzar Ahora
                    </a>
                    <a href="#" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-info-circle"></i> Más Información
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Font Awesome para los iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .jumbotron {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        margin-bottom: 0;
    }

    .card {
        transition: transform 0.3s ease-in-out;
        border: none;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .bg-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%) !important;
    }

    .display-4 {
        font-weight: 300;
    }

    .shadow {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .btn {
        border-radius: 25px;
        padding: 10px 25px;
    }

    .card-body i {
        transition: transform 0.3s ease;
    }

    .card:hover i {
        transform: scale(1.1);
    }
</style>